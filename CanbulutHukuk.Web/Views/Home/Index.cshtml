<div class="section-block-grey">
    <div class="container">
        <div class="section-heading center-holder">
            <span>Blog</span>
            <h3>En Son Paylaşımlar</h3>
            <div class="section-heading-line"></div>
            <p>Sizden gelen sorular ve güncel konular hakkında aradığınız tüm soruların cevapları bulabilirsiniz.</p>
        </div>
        <div class="row mt-50">
            @foreach (var item in Model.BlogList)
            {
                <div class="col-md-4 col-sm-4 col-12">
                    <div class="blog-grid">
                        <div class="blog-grid-img">
                            <img src="~/UploadImages/@(item.Photo)" alt="img">
                            <div class="data-box-grid">
                                <h4>@item.ReleaseDate.Value.ToString("dd")</h4>
                                <p>@item.ReleaseDate.Value.ToString("MMM")</p>
                            </div>
                        </div>
                        <div class="blog-grid-text">
                            <h4>@item.Title</h4>
                            <ul>
                                <li><i class="fa fa-calendar"></i>@item.ReleaseDate.Value.ToString("MMM dd, yyyy", new System.Globalization.CultureInfo("tr-TR"))</li>
                                <li><i class="fa fa-list-ul"></i>@item.CategoryName</li>
                            </ul>
                            <p>@item.Summary ...</p>
                            <div class="mt-20 left-holder"> <a href="@Url.Action("Sayfa", "Blog", new {Id = item.Id})" class="primary-button button-sm">Devamı</a> </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
